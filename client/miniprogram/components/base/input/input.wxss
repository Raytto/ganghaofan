/* 基础输入框组件样式 */
.base-input {
  width: 100%;
  margin-bottom: 32rpx;
}

.base-input__label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.base-input__label-text {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--color-text-primary, #333);
}

.base-input__required {
  color: var(--color-error, #FF3B30);
  margin-left: 8rpx;
  font-size: 32rpx;
}

.base-input__wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: var(--color-background-secondary, #F8F8F8);
  border: 2rpx solid var(--color-border, #E5E5E5);
  border-radius: 8rpx;
  padding: 24rpx 32rpx;
  transition: all 0.2s ease;
}

.base-input__field {
  flex: 1;
  font-size: 32rpx;
  color: var(--color-text-primary, #333);
  background: transparent;
  border: none;
  outline: none;
}

.base-input__textarea {
  min-height: 120rpx;
  line-height: 1.5;
}

.base-input__field::placeholder {
  color: var(--color-text-placeholder, #999);
}

.base-input__clear {
  padding: 8rpx;
  margin-left: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.base-input__clear-icon {
  font-size: 32rpx;
  color: var(--color-text-secondary, #666);
  line-height: 1;
}

.base-input__footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
  min-height: 40rpx;
}

.base-input__error-text {
  font-size: 28rpx;
  color: var(--color-error, #FF3B30);
}

.base-input__helper-text {
  font-size: 28rpx;
  color: var(--color-text-secondary, #666);
}

.base-input__count {
  margin-left: auto;
}

.base-input__count-text {
  font-size: 28rpx;
  color: var(--color-text-secondary, #666);
}

/* 状态样式 */
.base-input--focused .base-input__wrapper {
  border-color: var(--color-primary, #007AFF);
  background: var(--color-background-primary, #FFFFFF);
}

.base-input--error .base-input__wrapper {
  border-color: var(--color-error, #FF3B30);
}

.base-input--disabled {
  opacity: 0.6;
}

.base-input--disabled .base-input__wrapper {
  background: var(--color-background-disabled, #F0F0F0);
  cursor: not-allowed;
}

/* 深色主题适配 */
@media (prefers-color-scheme: dark) {
  .base-input__label-text {
    color: var(--color-text-primary-dark, #FFFFFF);
  }
  
  .base-input__wrapper {
    background: var(--color-background-secondary-dark, #2C2C2E);
    border-color: var(--color-border-dark, #3A3A3C);
  }
  
  .base-input__field {
    color: var(--color-text-primary-dark, #FFFFFF);
  }
  
  .base-input__field::placeholder {
    color: var(--color-text-placeholder-dark, #8E8E93);
  }
  
  .base-input--focused .base-input__wrapper {
    background: var(--color-background-primary-dark, #1C1C1E);
  }
}