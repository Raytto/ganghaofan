/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0; /* allow inner flex child to size properly */
  overflow: hidden;
}

.header {
  display: flex;
  flex-direction: column;
  padding: 8px 12px;
  border-bottom: 0.5px solid rgba(255,255,255,0.08);
}
.header .slogan { color: #8b949e; font-size: 12px; }
.header-bottom { display: flex; align-items: stretch; margin-top: 6px; }
.hb-left, .hb-right { display: flex; align-items: center; min-width: 0; }
.hb-left { flex: 1 1 0; }
.hb-right { flex: 1 1 0; justify-content: flex-end; gap: 6px; }
.today-sm { font-size: 12px; padding: 0 10px; height: 28px; border-radius: 14px; border: 0.5px solid rgba(255,255,255,0.12); background: #21262D; color: #C9D1D9; width: 100%; text-align: center; display: flex; align-items: center; justify-content: center; box-sizing: border-box; }
.view-toggle { font-size: 12px; padding: 0; height: 28px; line-height: 28px; border-radius: 14px; border: 0.5px solid rgba(255,255,255,0.12); background: #21262D; color: #C9D1D9; margin-right: 8px; width: 25px; box-sizing: border-box; text-align: center; display: flex; align-items: center; justify-content: center; }
.nav-btn-sm { font-size: 16px; padding: 0 6px; border: none; background: transparent; color: inherit; }
.header-bottom .full { color: #C9D1D9; font-weight: 600; }
.cal-track.animate { transition: transform 180ms ease-out; }
.slot .right { margin-left: auto; opacity: 0.8; }

/* Table-like split: 管/用 1/4 width, Today takes remaining 3/4 */
.hb-left-grid { display: flex; width: 100%; align-items: center; }
.hb-left-grid .hb-cell { display: flex; align-items: center; min-width: 0; }
.hb-left-grid .hb-cell.left { width: 25%; box-sizing: border-box; }
.hb-left-grid .hb-cell.right { flex: 1 1 0; }

/* Modal */
.modal-mask { position: fixed; left: 0; top: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.6); display: flex; align-items: center; justify-content: center; z-index: 999; }
.modal { width: 92%; max-width: 560px; max-height: 80vh; background: #151A21; color: #C9D1D9; border: 1px solid rgba(255,255,255,0.08); border-radius: 14px; overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.5); font-size: 12px; display: flex; flex-direction: column; }
.modal-header { padding: 12px 16px; display: flex; align-items: center; justify-content: center; position: relative; border-bottom: 1px solid rgba(255,255,255,0.08); flex: 0 0 auto; }
.modal-title { font-size: 16px; font-weight: 600; text-align: center; }
.modal-close { position: absolute; right: 12px; top: 8px; width: 28px; height: 28px; display: flex; align-items: center; justify-content: center; font-size: 18px; color: #8B949E; border-radius: 6px; }
.modal-close:active { background: rgba(255,255,255,0.06); color: #C9D1D9; }
.modal-body { padding: 14px 16px; box-sizing: border-box; }
.modal-footer { padding: 12px 16px; display: flex; gap: 12px; justify-content: flex-end; border-top: 1px solid rgba(255,255,255,0.08); flex: 0 0 auto; }
.row { display: flex; align-items: center; gap: 8px; margin-bottom: 10px; width: 100%; }
.row .lbl { width: 72px; color: #8B949E; }
.row .val { color: #C9D1D9; }
.row.col { align-items: flex-start; }
.row .col-body { flex: 1; }
.inp { flex: 1; height: 34px; border: 1px solid rgba(255,255,255,0.12); border-radius: 8px; padding: 6px 10px; background: #0D1117; color: #C9D1D9; font-size: 12px; box-sizing: border-box; }
.ta { width: 100%; min-height: 72px; border: 1px solid rgba(255,255,255,0.12); border-radius: 8px; padding: 8px 10px; background: #0D1117; color: #C9D1D9; font-size: 12px; box-sizing: border-box; }
.num { display: flex; align-items: center; gap: 6px; }
.inp-num { width: 76px; height: 34px; line-height: 34px; text-align: center; border: 1px solid rgba(255,255,255,0.12); border-radius: 8px; background: #0D1117; color: #C9D1D9; font-size: 12px; box-sizing: border-box; padding: 0 8px; }
/* Make modal buttons smaller (except title) */
.modal button { font-size: 12px; }
.unit { color: #8B949E; }
.opts-head { display: flex; align-items: center; justify-content: flex-start; gap: 8px; padding-bottom: 6px; border-bottom: 1px solid rgba(255,255,255,0.08); margin-bottom: 8px; width: 100%; }
.opts-head .opts-title { color: #8B949E; }
.opts-head button { margin-left: auto; margin-right: 8px; }
.opt-item { align-items: center; }
.opt-name { flex: 1; height: 34px; }
.opt-price { margin-left: auto; }
.opt-item .inp.opt-name { height: 34px; padding: 6px 8px; }
.opt-item .inp-num { width: 38px; } /* half of previous 76px */
.btn-adjust { min-width: 40px; height: 28px; line-height: 28px; padding: 0 6px; text-align: center; }
.btn-adjust { background: #414345; color: #C4C7C5; border: 1px solid #414345; }
.btn-primary { background: #A8C7FA; color: #062E6F; border: 1px solid #A8C7FA; }
.btn-accent { background: #131314; color: #A8C7FA; border: 1px solid #C4C7C5; }
.hb-right, .hb-center { color: #C9D1D9; }
.warn-text { color: #DA5234; padding: 6px 0 0; }

.loading, .error {
  padding: 16px;
  color: #8b949e;
}
.error { color: #f85149; }

.list {
  padding: 8px 12px 24px;
}
.meal-item {
  padding: 10px 12px;
  border: 0.5px solid rgba(255,255,255,0.08);
  border-radius: 8px;
  margin: 8px 0;
  background: #161B22;
}

.calendar {
  padding: 8px 8px 12px;
  display: flex;
  flex-direction: column;
  flex: 1;        /* fill scrollarea */
  min-height: 0;  /* enable cal-viewport flex:1 to take height */
}
.cal-viewport {
  position: relative;
  overflow: hidden;
  flex: 1;
}
.cal-track {
  will-change: transform;
  display: flex;
  flex-direction: column;
  height: 300%; /* nine blocks: 3 pages stacked (each page = 100% of viewport) */
}
.cal-track.animate {
  transition: transform 180ms ease-out;
}
.month-block { /* there are 9 blocks total; each is 1/9th of the viewport height */
  flex: 0 0 11.1111%;
}
.week-header {
  display: flex;
  flex-wrap: nowrap;
  padding: 0 2px 6px;
  color: #8b949e;
  font-size: 11px;
}
.week-header text { text-align: center; white-space: nowrap; overflow: hidden; padding: 0 2px; }
.week-header .w-wk { width: 18%; }
.week-header .w-wknd { width: 5%; }
.grid {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
}
.month-block .grid { height: 100%; }
.week-row { display: flex; width: 100%; height: 100%; }
.week-row + .week-row { /* no vertical gaps; height controlled by .cell */ }
.grid.grid7 .cell { box-sizing: border-box; padding: 0; }
.grid.grid7 .cell.wk { width: 18%; }
.grid.grid7 .cell.wknd { width: 5%; }
.cell {
  background: #131314;
  border: 0.5px solid #333537;
  border-radius: 0;
  height: 100%; /* fill the week-row height */
  margin-bottom: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.cell .date {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 20px;
  margin: 2px 0 0;
}
.date-num { font-size: 10px; line-height: 16px; color: #C9D1D9; }
.date.today .date-num {
  background: #A8C7FA;
  color: #131314;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  padding: 0;
  display: inline-block;
}
.slots { flex: 1 1 0; display: flex; flex-direction: column; min-height: 0; padding: 2px; }
.slot {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 6px;
  padding: 4px 6px;
  margin-top: 0;
  font-size: 11px;
  border: 0.5px solid rgba(255,255,255,0.06);
  min-height: 18px;
  flex: 1 1 0;
}
.slot + .slot { margin-top: 2px; }
.slot text { white-space: nowrap; overflow: hidden; text-overflow: ellipsis; text-align: center; width: 100%; }
.sline { line-height: 14px; }
.sline.line1 { font-weight: 600; }
.sline.line2, .sline.line3 { opacity: 1; }

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
