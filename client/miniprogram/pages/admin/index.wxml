<view class="{{themeClass}}">
<navigation-bar title="管理" back="{{false}}" color="{{darkMode ? '#C9D1D9' : '#202124'}}" background="{{darkMode ? '#1B1B1B' : '#FFFFFF'}}"></navigation-bar>
<view class="page theme-bg">
  <view class="section theme-text">管理员功能区</view>
  <block wx:if="{{!canAdmin}}">
    <view class="hint theme-text-tertiary">当前账号无管理权限</view>
  </block>
  <view class="row">
    <text class="theme-text">管理视图模式</text>
    <switch checked="{{adminViewEnabled}}" bindchange="onToggleAdminView"></switch>
  </view>
  <view class="hint theme-text-tertiary">开启后首页按管理员模式显示；关闭则按普通用户模式显示。</view>
</view>
</view>
