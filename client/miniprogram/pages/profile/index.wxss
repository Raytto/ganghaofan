.page { min-height: 100vh; padding-bottom: 64px; padding-bottom: calc(64px + env(safe-area-inset-bottom)); background: #131314; }
.light-theme .page { background: #F8F9FA; }
.section { padding: 16px; }

.profile-card {
  background: rgba(255, 255, 255, 0.04);
  border-radius: 12px;
  padding: 12px;
  margin-bottom: 12px;
}

.light-theme .profile-card {
  background: rgba(0, 0, 0, 0.03);
}

.profile-card .row { display: flex; align-items: center; margin: 6px 0; }
.profile-card .label { width: 92px; opacity: 0.7; font-size: 14px; }
.profile-card .value { font-size: 14px; }
.mono { font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; }
.pass-btn { margin-top: 8px; }

.balance-card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12px;
  padding: 20px;
  text-align: center;
  margin-bottom: 8px;
}

.light-theme .balance-card {
  background: rgba(0, 0, 0, 0.03);
}

.balance-title {
  font-size: 14px;
  opacity: 0.7;
  margin-bottom: 8px;
}

.balance-amount {
  font-size: 28px;
  font-weight: bold;
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.currency {
  font-size: 18px;
  margin-right: 4px;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 0;
  border-bottom: 1px solid rgba(255,255,255,0.08);
  cursor: pointer;
}

.light-theme .menu-item {
  border-bottom-color: rgba(0,0,0,0.08);
}

.menu-item:active {
  opacity: 0.6;
}

.menu-label {
  font-size: 16px;
}

.menu-arrow {
  font-size: 16px;
  opacity: 0.6;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 0;
  border-bottom: 1px solid;
}

.setting-item {
  border-bottom-color: rgba(255,255,255,0.08);
}

.light-theme .setting-item {
  border-bottom-color: rgba(0,0,0,0.08);
}

.setting-label {
  font-size: 16px;
}

.setting-switch {
  transform: scale(0.9);
}
